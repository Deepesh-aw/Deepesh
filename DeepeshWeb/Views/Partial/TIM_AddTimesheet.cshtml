@*@using DeepeshWeb.Models.Timesheet*@
@*@model IEnumerable<TIM_ProjectCreationModel>*@

<style>
    .text-red{
  color:red;
 
}
    .badge {
        font-size: 12px !important;
    }
</style>

<div class="modal-dialog modal-lg " role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title w-100" id="MilestoneTitle">Add Timesheet </h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="container">
                <div class="col-xl-12 col-lg-12">
                    <div class="card custom-card" ng-show="ViewTimesheet">
                        <div class="card-body">
                            <div class="row row-sm">
                                <div class="col-lg-8"></div>
                                <div class="col-lg-4" style="text-align: right; font-size: 17px">
                                    <b>Status :</b>  &nbsp; <label ng-if="TimesheetArr[0].StatusName == 'Inprogress'" class="badge badge-dark">{{TimesheetArr[0].StatusName}}</label><label ng-if="TimesheetArr[0].StatusName == 'Approved'" class="badge badge-success">{{TimesheetArr[0].StatusName}}</label><label ng-if="TimesheetArr[0].StatusName == 'Reject'" class="badge badge-danger">{{TimesheetArr[0].StatusName}}</label>
                                </div>
                            </div><br />
                            <div class="row row-sm">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Timesheet Date</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].TimesheetAddedDate}}
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Timesheet ID</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].TimesheetID}}
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Employee</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].EmployeeName}}
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Manager</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].ManagerName}}
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm" ng-if="TimesheetArr[0].StatusName == 'Approved'">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Approved Date</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].ApprovedDate}}
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Approved By</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].ModifyName}}
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm" ng-if="TimesheetArr[0].StatusName == 'Approved'">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Approved Description</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].ApproveDescription}}
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm" ng-if="TimesheetArr[0].StatusName == 'Reject'">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Rejected Date</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].ModifyDate}}
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Rejected By</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].ModifyName}}
                                    </div>
                                </div>
                            </div>
                            <div class="row row-sm" ng-if="TimesheetArr[0].StatusName == 'Reject'">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <b>Rejected Description</b>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        {{TimesheetArr[0].RejectDescription}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Entry Code End-->
                    </div>

                    <!--Entry Code start-->
                    <div class="card custom-card" ng-hide="ViewTimesheet">
                        <div class="card-body">
                            <div class="row row-sm">
                                <div class="col-lg-2">
                                    <div class="form-group">
                                        <label for="txtTimesheetDate">Date</label>
                                        <div class="input-group" id="txtTimesheetDate" data-PatentID="0">
                                            <div class="input-group-prepend">
                                                <div class="input-group-text">
                                                    <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                                </div>
                                            </div><input class="form-control" type="text" ng-model="ngtxtTimesheetDate" id="txtTimesheetDate" readonly="readonly">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="form-group">
                                        <label for="ddlClientName">Client Name</label>
                                        <div id="ClientType" class="parsley-select">
                                            <select ng-options="p.Client as p.ClientName for p in ClientDetails" ng-model="ngddlClient" id="ddlClient" class="form-control AllSelect" ng-change="ProjectDetails()" data-parsley-class-handler="#ClientType" data-parsley-errors-container="#ClientError" required="">
                                                <option></option>


                                            </select>
                                        </div>
                                        <div id="ClientError"></div>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="form-group">
                                        <label for="txtTimesheetDate">Project</label>
                                        <div id="ProjectType" class="parsley-select" ng-hide="OtherClient">
                                            <select ng-options="p.Project as p.ProjectName for p in ProjectInfo" ng-model="ngddlProjectName" id="ddlProjectName" class="form-control AllSelect NormalValidate" ng-change="MilestoneDetails()" data-parsley-class-handler="#ProjecttType" data-parsley-errors-container="#ProjectError">
                                                <option></option>

                                            </select>
                                        </div>
                                        <div ng-hide="OtherClient" id="ProjectError"></div>
                                        <input ng-show="OtherClient" type="text" class="form-control otherValidate" ng-model="ngtxtProject" id="txtProject">
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label for="txtTimesheetDate">Milestone</label>
                                        <div id="MileType" class="parsley-select" ng-hide="OtherClient">
                                            <select ng-options="m.MileStone as m.MileStoneName for m in MilestoneInfo" ng-model="ngddlMilestone" id="ddlMilestone" class="form-control AllSelect NormalValidate" ng-change="TaskDetails()" data-parsley-class-handler="#MileType" data-parsley-errors-container="#MileError">
                                                <option></option>

                                            </select>
                                        </div>
                                        <div id="MileError" ng-hide="OtherClient"></div>
                                        <span ng-show="OtherClient"><input type="text" class="form-control otherValidate" ng-model="ngtxtMilestone" id="txtMilestone" /></span>
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label for="txtTimesheetDate">Task</label>
                                        <div id="TaskType" class="parsley-select" ng-hide="OtherClient">
                                            <select select ng-options="t.ID as t.AllTask for t in TaskInfo" ng-model="ngddlTask" id="ddlTask" class="form-control AllSelect NormalValidate" ng-change="GetPrevTimesheet()" data-parsley-class-handler="#TaskType" data-parsley-errors-container="#TaskError">
                                                <option></option>
                                            </select>
                                        </div>
                                        <div id="TaskError" ng-hide="OtherClient"></div>

                                        <div ng-show="OtherClient">
                                            <input type="text" class="form-control otherValidate" ng-model="ngtxtTask" id="txtTask">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Entry Code End-->
                    </div>

                    <!-- row -->
                    <div class="row row-sm">
                        <!--div-->
                        <div class="col-xl-12" ng-hide="ViewTimesheet">
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="mg-b-0 text-md-nowrap tableCss">
                                            <thead>
                                                <tr>
                                                    @*<th>Task</th>*@
                                                    <th>From Time</th>
                                                    <th>To Time</th>
                                                    <th>Desc.</th>
                                                    <th>Status</th>
                                                    <th>Hrs.</th>
                                                    <th>Estd. Hrs.</th>
                                                    <th>Utld. Hrs.</th>
                                                    <th>Rem. Hrs.</th>
                                                    <th>Doc. Upload</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>

                                                    @*<td style="width:6%">
                                                        <div id="TaskType" class="parsley-select" ng-hide="OtherClient">
                                                            <select select ng-options="t.ID as t.AllTask for t in TaskInfo" ng-model="ngddlTask" id="ddlTask" class="form-control AllSelect NormalValidate" ng-change="GetPrevTimesheet()" data-parsley-class-handler="#TaskType" data-parsley-errors-container="#TaskError">
                                                                <option></option>
                                                            </select>
                                                        </div>
                                                        <div id="TaskError" ng-hide="OtherClient"></div>

                                                        <div ng-show="OtherClient">
                                                            <input type="text" class="form-control otherValidate" ng-model="ngtxtTask" id="txtTask">
                                                        </div>
                                                    </td>*@
                                                    <td style="width:13%">
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <div class="input-group-text">
                                                                    <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                                                </div>
                                                            </div><input class="form-control Time" type="text" ng-model="ngtxtFromTime" id="txtFromTime" data-parsley-class-handler="#FrmTimeType" data-parsley-errors-container="#FrmTimeError" required="">
                                                        </div>
                                                        <div id="FrmTimeError"></div>
                                                    </td>
                                                    <td style="width:13%">
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <div class="input-group-text">
                                                                    <i class="typcn typcn-calendar-outline tx-24 lh--9 op-6"></i>
                                                                </div>
                                                            </div><input class="form-control Time" type="text" ng-model="ngtxtToTime" id="txtToTime" data-parsley-class-handler="#ToTimeType" data-parsley-errors-container="#ToTimeError" required="">
                                                        </div>
                                                        <div id="ToTimeError"></div>
                                                    </td>
                                                    <td style="width:12%"><input type="text" class="form-control" ng-model="ngtxtDescription" id="txtDescription" required=""></td>
                                                    <td style="width:8%">
                                                        <div id="StatusType" class="parsley-select">
                                                            <select class="form-control AllSelect" ng-model="ngddlAllTaskStatus" id="ddlAllTaskStatus" data-parsley-class-handler="#StatusType" data-parsley-errors-container="#StatusError" required="">
                                                                <option value="">Choose One</option>
                                                                @foreach (var i in ViewBag.StatusData)
                                                                {
                                                                    <option value="@i.ID">@i.StatusName</option>
                                                                }
                                                            </select>
                                                            <div id="StatusError"></div>
                                                        </div>
                                                    </td>
                                                    <td style="width:7%"><input type="text" class="form-control" readonly="readonly" ng-model="ngtxtHours" id="txtHours"></td>
                                                    <td style="width:7%"><input type="text" class="form-control" ng-model="ngtxtEstimatedHours" id="txtEstimatedHours" readonly="readonly"></td>
                                                    <td style="width:7%"><input type="text" class="form-control" ng-model="ngtxtUtilizedHours" id="txtUtilizedHours" readonly="readonly"></td>
                                                    <td style="width:7%"><input type="text" class="form-control" ng-model="ngtxtRemainingHours" id="txtRemainingHours" readonly="readonly"></td>
                                                    <td style="width:16%">
                                                        <div class="custom-file">
                                                            <input class="custom-file-input" id="uploadFiles" name="fileUpload" type="file"> <label class="custom-file-label" for="uploadFile" style="text-align:initial">Choose file</label>
                                                        </div>
                                                        <div ng-repeat="i in UploadFiles">
                                                            <li>
                                                                {{i.Name}}&nbsp;
                                                          <button class="btn btn-danger badge" ng-click="RemoveTimesheetFiles($index)"><i class="fa fa-trash"></i></button>
                                                            </li>
                                                        </div>
                                                        <span ng-repeat="f in TempPrevTimesheetFiles" ng-if="f.Delete == 'No'">
                                                            <li>
                                                                <a href="{{f.Name}}" target="_blank">{{f.FileName}}</a>&nbsp;
                                                                <button type="button" class="btn btn-danger badge" ng-click="RemovePrevDoc($index)"><i class="fa fa-trash"></i></button>
                                                            </li>
                                                        </span>
                                                    </td>
                                                    <td style="width:5%">
                                                        <div class="btn-icon-list pd-t-10" id="divAddTimesheet" data-id="0" data-utilize="0" data-from="0" data-to="0" data-oldutilize="0">
                                                            <button type="submit" data-placement="top" data-toggle="tooltip" title="Add" class="fa fa-plus text-primary mr-2" style="border:none;background:none"></button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div><!-- bd -->
                                </div><!-- bd -->
                            </div><!-- bd -->
                        </div>
                        <!--div-->
                        <div class="col-xl-12" ng-if="TimesheetArr.length>0">
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">

                                        <table class="mg-b-0 text-md-nowrap tableCss" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>S.N.</th>
                                                    <th>Client</th>
                                                    <th>Project</th>
                                                    <th>Mile - Stone</th>
                                                    <th>Task</th>
                                                    <th>From Time</th>
                                                    <th>To Time</th>
                                                    <th>Desc.</th>
                                                    <th>Task Status</th>
                                                    <th>Hrs.</th>
                                                    <th>Estd. Hrs.</th>
                                                    <th>Utld. Hrs.</th>
                                                    <th>Rem. Hrs.</th>
                                                    <th>Doc.</th>
                                                    <th ng-hide="ViewTimesheet">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="t in TimesheetArr">
                                                    <td>{{$index+1}}</td>
                                                    <td>{{t.ClientName}}</td>
                                                    <td>{{t.ProjectName}}</td>
                                                    <td>{{t.MileStoneName}}</td>
                                                    <td>{{t.AllTask}}</td>
                                                    <td>{{t.FromTimeView}}</td>
                                                    <td>{{t.ToTimeView}}</td>
                                                    <td>{{t.Description}}</td>
                                                    <td>{{t.AllTaskStatusText}}</td>
                                                    <td>{{t.Hours}}</td>
                                                    <td>{{t.EstimatedHours}}</td>
                                                    <td>{{t.UtilizedHours}}</td>
                                                    <td ng-class="{'text-red': t.RemainingHours.includes('-')}">{{t.RemainingHours}}</td>
                                                    <td><span ng-repeat="f in t.Files">
                                                        <li>{{f.FileName}}</li>
                                                        </span>
                                                        
                                                        <span ng-repeat="f in t.PrevFiles" ng-if="f.Delete == 'No'">
                                                            <li><a href="{{f.Name}}" target="_blank">{{f.FileName}}</a></li>
                                                        </span>
                                                    </td>
                                                    <td ng-hide="ViewTimesheet">
                                                        <div>
                                                            <i class="si si-pencil text-primary mr-2" data-toggle="tooltip" data-placement="top" data-original-title="Edit" ng-click="EditTimesheet($index)"></i>
                                                            <i class="si si-trash text-danger mr-2" data-toggle="tooltip" data-placement="top" data-original-title="Delete" ng-click="DeleteTimesheet($index)"></i>
                                                        </div>

                                                    </td>
                                                </tr>

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td class="right" colspan="9">Total Hours:</td>
                                                    <td class="right">{{GetTotalHours()}}</td>
                                                    <td colspan="4"></td>
                                                    <td ng-hide="ViewTimesheet"></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div><!-- bd -->
                                </div><!-- bd -->
                            </div><!-- bd -->
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-center" ng-hide="ViewTimesheet">
                    <button type="button" class="btn btn-primary" id="btnAddTimesheet" ng-hide="TimesheetLoad" ng-click="FinalAddTimesheet()">Submit</button>
                    <button class="btn btn-primary" type="button" ng-show="TimesheetLoad" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Please wait...
                    </button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
                <div class="modal-footer justify-content-center" ng-show="ViewTimesheet">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

